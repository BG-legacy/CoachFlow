# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ============================================
# DATABASE - MongoDB (Local)
# ============================================
MONGODB_URI=mongodb://localhost:27017/coachflow
MONGODB_TEST_URI=mongodb://localhost:27017/coachflow_test

# ============================================
# CACHE - Redis (Optional in dev)
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-not-for-production
JWT_REFRESH_EXPIRE=30d

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
SESSION_SECRET=dev-session-secret

# ============================================
# CORS & CLIENT
# ============================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# AI/ML - OpenAI (Disabled by default in dev)
# ============================================
# OPENAI_API_KEY=your-key-here
ENABLE_AI_FEATURES=false

# ============================================
# CLOUD STORAGE (Local in dev)
# ============================================
USE_S3_STORAGE=false
UPLOAD_PATH=./uploads
VIDEO_UPLOAD_PATH=./uploads/videos

# ============================================
# EMAIL (Console logging in dev)
# ============================================
EMAIL_PROVIDER=console
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# NOTIFICATIONS (Disabled in dev)
# ============================================
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
