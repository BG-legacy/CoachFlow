# ============================================
# PRODUCTION ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=5000
API_VERSION=v1

# ============================================
# DATABASE - MongoDB (Production Cluster)
# ============================================
MONGODB_URI=mongodb+srv://prod-user:PASSWORD@production-cluster.mongodb.net/coachflow?retryWrites=true&w=majority

# ============================================
# CACHE - Redis (Required)
# ============================================
REDIS_URL=redis://production-redis.example.com:6379
REDIS_PASSWORD=production-redis-password

# ============================================
# JWT AUTHENTICATION (MUST BE STRONG SECRETS)
# ============================================
# Generate: openssl rand -base64 64
JWT_SECRET=GENERATE-STRONG-SECRET-HERE
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=GENERATE-STRONG-SECRET-HERE
JWT_REFRESH_EXPIRE=30d

# ============================================
# SECURITY (MUST BE STRONG SECRETS)
# ============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=GENERATE-STRONG-SECRET-HERE

# ============================================
# CORS & CLIENT
# ============================================
CORS_ORIGIN=https://app.coachflow.com
ALLOWED_ORIGINS=https://coachflow.com,https://www.coachflow.com,https://app.coachflow.com,https://admin.coachflow.com

# ============================================
# RATE LIMITING (Strict)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# AI/ML - OpenAI
# ============================================
OPENAI_API_KEY=sk-production-openai-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
ENABLE_AI_FEATURES=true

# ============================================
# CLOUD STORAGE - AWS S3 (Required)
# ============================================
AWS_ACCESS_KEY_ID=production-aws-access-key
AWS_SECRET_ACCESS_KEY=production-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=coachflow-production-uploads
AWS_S3_VIDEO_BUCKET=coachflow-production-videos
USE_S3_STORAGE=true

# ============================================
# EMAIL SERVICE (Required)
# ============================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=production-sendgrid-api-key
EMAIL_FROM=CoachFlow <noreply@coachflow.com>
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# SMS - Twilio (Required)
# ============================================
TWILIO_ACCOUNT_SID=production-twilio-account-sid
TWILIO_AUTH_TOKEN=production-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
ENABLE_SMS_NOTIFICATIONS=true

# ============================================
# PUSH NOTIFICATIONS - Firebase (Required)
# ============================================
FIREBASE_PROJECT_ID=coachflow-production
FIREBASE_PRIVATE_KEY=production-firebase-private-key
FIREBASE_CLIENT_EMAIL=production-firebase-client-email
ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# EXTERNAL SERVICES
# ============================================
PYTHON_ANALYSIS_SERVICE_URL=https://analysis.coachflow.com/analyze
PYTHON_ANALYSIS_API_KEY=production-analysis-api-key

# ============================================
# LOGGING (Production level)
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# ADMIN
# ============================================
ADMIN_EMAIL=admin@coachflow.com
ADMIN_DEFAULT_PASSWORD=GENERATE-STRONG-PASSWORD

# ============================================
# MONITORING (Required in Production)
# ============================================
SENTRY_DSN=https://production-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=production-newrelic-license-key
ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X
