# ============================================
# STAGING ENVIRONMENT
# ============================================
NODE_ENV=staging
PORT=5000
API_VERSION=v1

# ============================================
# DATABASE - MongoDB (Staging Cluster)
# ============================================
MONGODB_URI=mongodb+srv://staging-user:PASSWORD@staging-cluster.mongodb.net/coachflow?retryWrites=true&w=majority

# ============================================
# CACHE - Redis (Required)
# ============================================
REDIS_URL=redis://staging-redis.example.com:6379
REDIS_PASSWORD=staging-redis-password

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=staging-jwt-secret-change-this
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=staging-jwt-refresh-secret-change-this
JWT_REFRESH_EXPIRE=30d

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=staging-session-secret

# ============================================
# CORS & CLIENT
# ============================================
CORS_ORIGIN=https://staging.coachflow.com
ALLOWED_ORIGINS=https://staging.coachflow.com,https://staging-admin.coachflow.com

# ============================================
# AI/ML - OpenAI
# ============================================
OPENAI_API_KEY=sk-staging-openai-key
OPENAI_MODEL=gpt-4
ENABLE_AI_FEATURES=true

# ============================================
# CLOUD STORAGE - AWS S3
# ============================================
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=coachflow-staging-uploads
AWS_S3_VIDEO_BUCKET=coachflow-staging-videos
USE_S3_STORAGE=true

# ============================================
# EMAIL SERVICE
# ============================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=staging-sendgrid-api-key
EMAIL_FROM=CoachFlow Staging <noreply-staging@coachflow.com>
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# SMS - Twilio
# ============================================
TWILIO_ACCOUNT_SID=staging-twilio-account-sid
TWILIO_AUTH_TOKEN=staging-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
ENABLE_SMS_NOTIFICATIONS=true

# ============================================
# PUSH NOTIFICATIONS - Firebase
# ============================================
FIREBASE_PROJECT_ID=coachflow-staging
FIREBASE_PRIVATE_KEY=staging-firebase-private-key
FIREBASE_CLIENT_EMAIL=staging-firebase-client-email
ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project
